/* login.wxss - Elegant & Artistic Redesign */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between; /* Push footer down */
  min-height: 100vh;
  padding: 60rpx 40rpx; /* More padding top/bottom */
  box-sizing: border-box;
  /* Subtle gradient background */
  background: linear-gradient(135deg, #f8f0ff 0%, #e6f7ff 100%); /* Soft Lilac to Soft Sky Blue */
  color: #333; /* Default text color */
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin-bottom: 50rpx; /* Increased spacing */
}

.logo {
  width: 140rpx; /* Slightly larger */
  height: 140rpx;
  margin-bottom: 30rpx;
  border-radius: 30rpx; /* Softer corners */
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08); /* Subtle shadow */
}

.title {
  font-size: 44rpx; /* Larger title */
  font-weight: 400; /* Lighter weight for elegance - Adjusted from 300 */
  color: #2c2c2e; /* Darker grey */
  margin-bottom: 15rpx;
  letter-spacing: 1rpx; /* More spacing */
}

.subtitle {
  font-size: 28rpx;
  color: #8a8a8e; /* Medium grey */
  line-height: 1.4;
}

.login-form {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8); /* Slightly transparent card */
  padding: 50rpx 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.06);
  backdrop-filter: blur(10rpx); /* Frosted glass effect (check compatibility) */
  margin-bottom: 40rpx; /* Space before privacy policy */
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-container {
  width: 180rpx; /* Larger avatar */
  height: 180rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100% !important;
  height: 100% !important;
  min-height: 180rpx !important;
  border-radius: 90rpx; /* Default to circle */
  overflow: hidden;
  background-color: #e8e8e8; /* Placeholder background */
  border: 4rpx solid rgba(255, 255, 255, 0.5); /* Subtle white border */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  padding: 0 !important;
  margin: 0 !important;
  line-height: 1 !important;
  transition: transform 0.2s ease-in-out; /* Add transition for potential hover */
}

.avatar-wrapper::after {
  border: none !important; /* Clean up default button styles */
  display: none !important;
}

.avatar {
  width: 100%;
  height: 100%;
  display: block;
}

.avatar-edit-icon {
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #8e44ad, #3498db); /* Purple to Blue gradient */
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
  border: 2rpx solid white; /* White border for pop */
}

.icon {
  font-size: 24rpx;
  color: #fff;
}

/* Remove avatar controls styling */
.avatar-controls {
  display: none; /* Hide controls */
}
.tip { /* Keep tip styling simple */
  /* font-size: 24rpx; */ /* Style is inline now */
  /* color: #8a8a8e; */
  /* margin-bottom: 8rpx; */
}

.nickname-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.label {
  font-size: 26rpx;
  font-weight: 500;
  color: #555;
  margin-bottom: 15rpx;
  display: block;
  text-align: center; /* 让标题居中 */
  padding-left: 0; /* 移除左边距 */
}

.input {
  width: 100%;
  height: 92rpx;
  border: 1rpx solid #dcdcdc; /* 软边框 */
  border-radius: 16rpx; /* 更圆润 */
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #fff; /* 白色背景 */
  box-sizing: border-box;
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
  text-align: center; /* 让输入内容居中 */
}

.input:focus { /* Style for focus state */
  border-color: #8e44ad; /* Accent color */
  box-shadow: 0 0 0 4rpx rgba(142, 68, 173, 0.1); /* Subtle glow */
}

.login-btn {
  width: 100%;
  height: 96rpx;
  /* Artistic gradient */
  background: linear-gradient(135deg, #8e44ad, #3498db); /* Purple to Blue */
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx; /* Match input */
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0 30rpx 0;
  border: none; /* Remove default border */
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.1s ease, box-shadow 0.1s ease;
}

.login-btn-hover { /* Use hover-class */
  /* transform: scale(0.98); */ /* Keep transform for feedback */
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12); /* Slightly adjusted hover shadow */
  opacity: 0.95; /* Add slight opacity change on hover */
}

.login-btn[disabled] {
  background: #ccc; /* Standard disabled grey */
  box-shadow: none;
  color: #888;
  opacity: 0.7;
}

/* Removed btn-hover class as we use hover-class now */

.skip-login {
  margin-top: 20rpx;
}

.skip-text {
  font-size: 26rpx;
  color: #666; /* Less prominent skip */
  text-decoration: none;
  transition: color 0.2s ease;
}
.skip-text:hover { /* Hover effect if possible */
  color: #8e44ad; /* Accent color on hover */
}

.privacy-policy {
  margin-top: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #8a8a8e;
  position: relative;
}

.policy-checkbox-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.policy-checkbox {
  transform: scale(0.8);
  margin-right: 8rpx;
}

.policy-text-container {
  display: flex;
  align-items: center;
}

.policy-text {
  font-size: 24rpx;
  color: #8a8a8e;
}

.policy-link {
  color: #6236ff;
  display: inline;
  font-size: 24rpx;
}

.policy-tip {
  position: absolute;
  top: -70rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, rgba(255, 59, 48, 0.95), rgba(255, 70, 120, 0.95));
  color: white;
  padding: 14rpx 28rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.18);
  opacity: 0;
  animation: pulse 2s infinite;
  z-index: 100;
  transition: all 0.3s cubic-bezier(0.18, 0.89, 0.32, 1.28);
  white-space: nowrap;
  font-weight: 500;
  letter-spacing: 1rpx;
}

.policy-tip.show {
  opacity: 1;
}

.policy-tip-arrow {
  position: absolute;
  bottom: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid rgba(255, 59, 48, 0.9);
}

@keyframes pulse {
  0% {
    transform: translateX(-50%) scale(1);
  }
  50% {
    transform: translateX(-50%) scale(1.05);
  }
  100% {
    transform: translateX(-50%) scale(1);
  }
}

